@model List<Projet2Homechef.Models.Villageois>

@{
    ViewBag.Title = "Admin";
    Layout = "_LayoutChoixSejour";
}

<h3 class="titre">Gestionnaire</h3>




<table border="1">
      <tr>
          <th>Nom</th>    
          <th>Prenom</th>  
          <th>DateDeNaissance</th>
          <th>Email</th> 
          <th>Tel</th> 
          <th>Role</th> 
          <th> Valider </th>
          <th>Refuser</th>
          <th>Supprimer</th>
       </tr>
    @foreach(var villageois in Model)
    {
         <tr>
          <td>@villageois.Nom</td>    
          <td>@villageois.Prenom</td> 
          <td>@villageois.DateDeNaissance.ToShortDateString()</td> 
          <td>@villageois.Email</td> 
          <td>@villageois.Tel</td> 
          <td>@villageois.Role</td> 
          <td> <button1 class="btn btn-success btn-xl" type="submit">@Html.ActionLink("modifier", "FormulaireVillageois", "Admin",new{@id = @villageois.Id}) </button1> </td>
          <td> <button2 class="btn btn-danger btn-xl" type="submit">@Html.ActionLink("supprimer", "DeleteVillageois", "Admin", new{@id = @villageois.Id})</button2> </td>
         

      </tr>
    }

      
  </table>
  
